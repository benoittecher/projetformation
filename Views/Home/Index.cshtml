<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" style="margin-top:10vh">
        @for (int i = 0; i < ViewBag.prochainesSessionsArray.Length; i++)
        {
        <div class="item @((i == 0) ? "active" : "")">
            <img class="d-block w-100" src="~/Images/logojs.png" alt="slide @i" style="width:100%; height:50vh;">
            <div class="carousel-caption">
                <h5 style="color:black;">@ViewBag.prochainesSessionsArray[i].Parcours.Designation : @ViewBag.prochainesSessionsArray[i].DateDebut.ToString("dd MM yyyy")</h5>
                <p style="color:black;">Places restantes : @ViewBag.SessionsController.NbPlacesRestantes(ViewBag.prochainesSessionsArray[i].Id)</p>
                <a class="btn btn-info" href="/Parcours/Details/@(ViewBag.prochainesSessionsArray[i].Parcours.Id)">Consulter le parcours</a>
            </div>
        </div>       
        }
