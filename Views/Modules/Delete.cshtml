@model WebApplicationFormation.Models.Module

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Êtes-vous certain(e) de vouloir supprimer le module @Model.Resume ?</h2>
