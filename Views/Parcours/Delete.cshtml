@model WebApplicationFormation.Models.Parcours

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Êtes-vous certain(e) de vouloir supprimer le parcours @Model.Designation ?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Designation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Designation)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NbHeures)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NbHeures)
        </dd>

    </dl>
    <p>Modules composant ce parcours : </p>
    <ul class="no-style">
        @foreach (WebApplicationFormation.Models.Module module in Model.Modules)
        {
            <li><p>@module.Resume</p></li>
        }
    </ul>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-danger" /> |
            @Html.ActionLink("Liste des parcours", "Index")
        </div>
    }
</div>
