@model WebApplicationFormation.Models.Parcours

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Parcours @Model.Designation</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NbHeures)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NbHeures)
        </dd>

    </dl>
    <p><strong>Liste des modules composant ce parcours : </strong></p>
    <ul class="no-style">
        @foreach (WebApplicationFormation.Models.Module module in Model.Modules)
        {
        <li><a href="/Modules/Details/@module.Id">@module.Resume</a></li>
        }
    </ul>
</div>
<p>
    @Html.ActionLink("Modifier", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Retour à la liste des parcours", "Index")
</p>
